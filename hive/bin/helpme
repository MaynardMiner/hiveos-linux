#!/usr/bin/env bash

[ -t 1 ] && . colors

echo -e "$(cat <<EOF
${YELLOW}=== Commands FAQ ===
${CYAN}miner${NOCOLOR} - shows running miner screen
${CYAN}miner start | stop${NOCOLOR} - starts or stops miner obviously
${CYAN}agent-screen${NOCOLOR} - shows hive client agent
${BCYAN}Ctrl+A, D${NOCOLOR} - detach from screen (miner or agent) so it will be working in background
${CYAN}selfupgrade${NOCOLOR} - upgrade hive from repository
${CYAN}firstrun -f [URL]${NOCOLOR} - force rig setup, you will enter ID and password again, URL is optional
${CYAN}wifi${NOCOLOR} - to setup WiFi if you have one
${PURPLE}net-test${NOCOLOR} - check your network connection
${PURPLE}gpu-fans-find${NOCOLOR} - find GPU by spinning fans
${PURPLE}hive-passwd${NOCOLOR} - change system password
${PURPLE}logs-off${NOCOLOR} - for USB Flash Drives move logs to RAM
${PURPLE}disk-expand${NOCOLOR} - enlarge disk to use all space
${PURPLE}hpkg${NOCOLOR} - Hive package manager
${PURPLE}hive-replace${NOCOLOR} - system image replacement tool
EOF
)"
